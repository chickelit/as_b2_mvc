<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard - Produtos</title>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap" rel="stylesheet">
    <style>
      body {
        background: linear-gradient(135deg, #f8d478, #ff8a9f);
        font-family: 'Fredoka', sans-serif;
        color: #2d1e2f;
        min-height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 24px;
      }

      h1 {
        margin-top: 30px;
        margin-bottom: 20px;
        font-size: 2.5rem;
        font-weight: 600;
        color: #fff;
        text-shadow: 2px 2px #ff589b;
      }

      .add-btn {
        background-color: #fff;
        color: #ff589b;
        padding: 12px 24px;
        border-radius: 28px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        box-shadow: 4px 4px 0 #2d1e2f;
        transition: all 0.2s ease;
        margin-bottom: 32px;
      }

      .add-btn:hover {
        background-color: #ff589b;
        color: #fff;
      }

      .card {
        background: #fff;
        border: 3px solid #ff8a9f;
        border-radius: 32px;
        padding: 28px 24px;
        margin-bottom: 24px;
        width: 340px;
        color: #2d1e2f;
        box-shadow: 8px 8px 0 #2d1e2f;
      }

      .card h2 {
        margin-top: 0;
        color: #ff589b;
        font-size: 1.6rem;
        font-weight: 600;
      }

      .card p {
        margin: 8px 0;
        font-size: 1.1rem;
      }

      .card a {
        display: inline-block;
        margin-top: 12px;
        background: #ff8a9f;
        color: #fff;
        padding: 10px 20px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 600;
        margin-right: 10px;
        transition: all 0.2s;
      }

      .card a:hover {
        background: #2d1e2f;
        color: #fff;
      }

      ul.products-list {
        list-style: none;
        padding: 0;
        margin: 0;
        width: 340px;
      }

      ul.products-list li {
        background: #fff;
        border: 2px solid #2d1e2f;
        border-radius: 20px;
        margin-bottom: 14px;
        padding: 16px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #2d1e2f;
        font-size: 1.05rem;
        box-shadow: 4px 4px 0 #ff8a9f;
        transition: transform 0.2s;
      }

      ul.products-list li:hover {
        transform: translateY(-3px);
      }

      ul.products-list li a {
        color: #ff589b;
        font-weight: bold;
        text-decoration: none;
      }

      ul.products-list li a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>Produtos</h1>
    <a href="/dashboard/products/create" class="add-btn">Adicionar Produto</a>

    {{!-- Produto específico --}}
    {{#if product}}
      <div class="card">
        <h2>Produto</h2>
        <p>Nome: {{product.name}}</p>
        <p>Descrição: {{product.descricao}}</p>
        <p>Preço: {{product.preco}}</p>
        <a href="/">Voltar</a>
      </div>
    {{!-- Lista de produtos --}}
    {{else if productsWithPagination}}
      <ul class="products-list">
        {{#each productsWithPagination.products}}
          <li>
            <a href="/show/{{this.id}}">{{this.name}}</a>
            <span>{{this.preco}}</span>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </body>
</html>