<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard - Produtos</title>
    <style>
      body {
        background: linear-gradient(135deg, #6d2e91 0%, #f9c846 100%);
        font-family: 'Montserrat', Arial, sans-serif;
        color: #fff;
        min-height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
      }
      h1 {
        margin-top: 40px;
        margin-bottom: 24px;
        font-size: 2.2rem;
        font-weight: bold;
        letter-spacing: 2px;
        color: #fff;
        text-shadow: 2px 2px 0 #6d2e91;
      }
      .add-btn {
        color: #fff;
        background: #6d2e91;
        padding: 10px 22px;
        border-radius: 16px;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(109,46,145,0.08);
        margin-bottom: 32px;
        display: inline-block;
      }
      .add-btn:hover {
        background: #f9c846;
        color: #6d2e91;
      }
      .card {
        background: rgba(255,255,255,0.15);
        border-radius: 24px;
        box-shadow: 0 4px 24px rgba(109,46,145,0.15);
        padding: 32px 24px;
        margin-bottom: 24px;
        width: 340px;
        color: #fff;
      }
      .card h2 {
        margin-top: 0;
        color: #f9c846;
        font-size: 1.4rem;
        font-weight: bold;
      }
      .card p {
        margin: 8px 0;
        font-size: 1.1rem;
      }
      .card a {
        display: inline-block;
        margin-top: 12px;
        color: #fff;
        background: #6d2e91;
        padding: 8px 18px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        transition: background 0.2s;
        margin-right: 8px;
      }
      .card a:hover {
        background: #f9c846;
        color: #6d2e91;
      }
      ul.products-list {
        list-style: none;
        padding: 0;
        margin: 0;
        width: 340px;
      }
      ul.products-list li {
        background: rgba(255,255,255,0.10);
        border-radius: 16px;
        margin-bottom: 12px;
        padding: 14px 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #fff;
        font-size: 1.08rem;
        box-shadow: 0 2px 8px rgba(109,46,145,0.08);
      }
      ul.products-list li a {
        color: #f9c846;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.2s;
      }
      ul.products-list li a:hover {
        color: #fff;
        text-decoration: underline;
      }
    </style>
  </head>
    <body>
    <h1>Produtos</h1>
    <a href="/dashboard/products/create" class="add-btn">Adicionar Produto</a>

    {{!-- Exibe erros de validação --}}
    {{#if errors}}
      <ul style="background:#fff3cd; color:#6d2e91; border-radius:12px; padding:16px 24px; margin-bottom:24px; width:340px; box-shadow:0 2px 8px rgba(109,46,145,0.08);">
        {{#each errors}}
          <li>{{this.msg}}</li>
        {{/each}}
      </ul>
    {{/if}}

    {{!-- Produto específico --}}
    {{#if product}}
      <div class="card">
        <h2>Produto</h2>
        <p>Nome: {{product.name}}</p>
        <p>Descrição: {{product.descricao}}</p>
        <p>Preço: {{product.preco}}</p>
        <a href="/dashboard/products/edit/{{product.id}}">Editar</a>
        <a href="/dashboard/products">Voltar</a>
      </div>
    {{!-- Lista de produtos --}}
    {{else if productsWithPagination}}
      <ul class="products-list">
        {{#each productsWithPagination.products}}
          <li>
            <a href="/dashboard/products/show/{{this.id}}">{{this.name}}</a>
            <span>{{this.preco}}</span>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </body>
</html>